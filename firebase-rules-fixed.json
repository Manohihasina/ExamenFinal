{
  "rules": {
    ".read": true,
    ".write": true,

    "cars": {
      "$carId": {
        ".read": true,
        ".write": true
      }
    },

    "interventions": {
      ".indexOn": ["repairId", "status", "active"],
      "$interventionId": {
        ".read": true,
        ".write": true
      }
    },

    "repairs": {
      "$repairId": {
        ".read": true,
        ".write": true,
        ".validate": {
          "status": "newData.isString() && newData.val().length > 0",
          "interventionDuration": "newData.isNumber() && newData.val() > 0"
        }
      }
    },

    "repair_slots": {
      "$slotId": {
        ".read": true,
        ".write": true
      }
    },

    "users": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    }
  }
}
